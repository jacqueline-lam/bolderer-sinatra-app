<h2>Log a new problem</h2>
  <!-- when sending form  to controller, all name attributes will be stored in params hash; name to point to key, vaule = data submitted by user   -->
<form action="/problems" method="POST">
  <!-- Date -->
  <label>Date: </label>
  <input type="date" name="problem[date]"required><br>
  <!-- Problem Color -->
  <label>Color: </label>
  <% @colors.each do |color| %>
    <input type="radio" name="problem[color]" value="<%= color %>" required><%= color %></input>
  <% end %><br>

  <!-- Problem Grade -->
  <label>Problem Grade: </label>
  <select name="problem[grade]" required>
    <option value="">Choose a V-grade</option>
    <% @grades.each do |grade| %>
      <option value="<%= grade %>"><%= grade %></option>
    <% end %>
  </select><br>

  <!-- Problem Style -->
  <h3>What is the style of the problem?</h3>
  <!-- iterate through styles -->
  <% @styles.each do |style| %>
    <!-- array of style IDs is stored inside 'problem' hash -->
    <!-- when checkbox is selected, value (style's id), is what gets sent through to the params hash -->

    <input type="checkbox" name="problem[style_ids][]"  value="<%= style.id %>">
      <%= style.name %>
    </input>

    <br>
  <% end %>

  <!-- Problem Image URL-->
  <label>Image URL</label>
  <input type="text" name="problem[image]">
  <br><br>

  <button type="submit">Add Problem</button><br>

</form>